<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip"/>
            <gradient
                android:angle="0"
                android:centerColor="#aaffffff"
                android:centerY="0.75"
                android:endColor="#aaffffff"
                android:startColor="#aaffffff"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip"/>
                <gradient
                    android:angle="90"
                    android:centerColor="#80888888"
                    android:centerY="0.75"
                    android:endColor="#a0888888"
                    android:startColor="#80888888"/>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip"/>
                <gradient
                    android:angle="90"
                    android:endColor="#ff00BFFF"
                    android:startColor="#ff00BFFF"/>
            </shape>
        </clip>
    </item>
</layer-list>