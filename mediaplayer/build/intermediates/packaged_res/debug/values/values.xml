<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="player_time_color">#aaffffff</color>
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <string name="action_settings">Settings</string>
    <string name="hello_world">Hello world!</string>
    <string name="player_media_default_time">--:--</string>
    <string name="player_name">OTT-Player</string>
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo">
		<!--
			Theme customizations available in newer API levels can go in
			res/values-vXX/styles.xml, while customizations related to
			backward-compatibility can go here.
		-->
	</style>
    <style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level
			can go here. -->
	</style>
    <style name="Theme.Dialog.PlayerExit" parent="@android:style/Theme.Dialog">
		<item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
		<item name="android:keyTextSize">50sp</item>
    </style>
    <style name="Widget.SeekBar.PlayerProgress" parent="@android:style/Widget.SeekBar">
		<item name="android:progressDrawable">@drawable/player_seekbar</item>
		<item name="android:thumb">@drawable/seekbar_thumb_btn</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
	</style>
</resources>