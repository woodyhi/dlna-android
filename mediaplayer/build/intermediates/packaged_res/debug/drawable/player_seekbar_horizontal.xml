<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip"/>
            <gradient
                android:angle="270"
                android:centerColor="#ffE8E8E8"
                android:centerY="0.75"
                android:endColor="#ffE8E8E8"
                android:startColor="#ffE8E8E8"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip"/>
                <gradient
                    android:angle="270"
                    android:centerColor="#80C1E8F7"
                    android:centerY="0.75"
                    android:endColor="#a0C1E8F7"
                    android:startColor="#80C1E8F7"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip"/>
                <gradient
                    android:angle="270"
                    android:centerColor="#ff47BCE8"
                    android:centerY="0.75"
                    android:endColor="#ff47BCE8"
                    android:startColor="#ff47BCE8"
                    />
            </shape>
        </clip>
    </item>

</layer-list>

